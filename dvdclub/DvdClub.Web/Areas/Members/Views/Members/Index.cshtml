@model DvdClub.Web.Areas.Users.Model.MembersIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            FirstName
        </th>
        <th>
            LastName
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>
    @foreach( var item in Model.Users ) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("ShowActivity", "RentalsByUserId", "Rentals", new { Area = "Rentals", Id = item.Id }, new { }) |
                @Html.ActionLink("RentAMovie", "Create", "Rentals", new { Area = "Rentals", UserId = item.Id }, new { }) |
            </td>
        </tr>
    }

</table>
